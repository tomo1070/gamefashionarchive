<div>
  <%= image_tag @post.get_image %>
  <h3>タイトル：<%= @post.title %></h3>
  <p>名前：<%= @post.user.name %></p>
  <p>コメント：<%= @post.comment %></p>
  <p>タグ：
  <% @selected_tags.each do |tag| %>
  <%= tag.name %>
  <% end %>
  </p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <%= comment.user.name %> <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "削除", post_comments_path(comment.post, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントを入力してください" %>
    <%= f.submit "コメントを投稿する" %>
  <% end %>
</div>

<%= link_to "投稿の編集", edit_post_path(@post.id) %>