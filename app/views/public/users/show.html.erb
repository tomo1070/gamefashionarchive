<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <%= link_to list_path(post.id) do %>
        <%= image_tag post.get_image, style: "width: 300px; height: 300px;" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="row">
  <h2>いいねした画像</h2>
  <% @favorite_posts.each do |post| %>
    <div class="col-md-4">
      <div class="image-wrapper" style="width: 300px; height: 300px; overflow: hidden;">
        <%= link_to list_path(post.id) do %>
          <%= image_tag post.get_image, style: "width: 100%; height: 100%; object-fit: cover;" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @user == @current_user %>
  <%= link_to "プロフィール編集", edit_user_path(@user) %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<% else %>
<% end %>