<%= form_with model: @group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>
  
<div class="form-group">
  <%= f.label :画像 %>
  <div class="row">
    <% @posts.each_slice(3) do |posts| %>
      <% posts.each do |post| %>
        <div class="col-md-4">
          <div class="image-checkbox">
            <%= f.check_box :post_ids, { multiple: true }, post.id, class: "image-checkbox-input" %>
            <%= image_tag post.image, size: "200x200" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<script>
$(document).ready(function() {
  $('.image-checkbox').click(function() {
    $(this).find('.image-checkbox-input').click();
  });
});
</script>

  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>