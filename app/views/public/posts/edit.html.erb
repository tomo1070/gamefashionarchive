<%= form_with model: @post do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>コメント</h4>
  <%= f.text_area :comment %>
  <%= f.collection_select :tag_ids, Tag.all, :id, :name, {include_blank: "選択してください"} %>
  <%= f.submit '投稿' %>
<% end %>

